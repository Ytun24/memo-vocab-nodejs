<body>
  <main>
    <form
      class="vocab-form"
      action="/member/<% if (editing) { %>edit-vocab<% } else { %>add-vocab<% } %>"
      method="POST"
    >
      <div class="form-control">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          value="<% if (editing) { %><%= vocab.title %><% } %>"
        />
      </div>
      <div class="form-control">
        <label for="type">Type</label>
        <input
          type="text"
          name="type"
          id="type"
          value="<% if (editing) { %><%= vocab.type %><% } %>"
        />
      </div>
      <div class="form-control">
        <label for="meaning">Meaning</label>
        <textarea name="meaning" id="meaning" rows="5">
<% if (editing) { %><%= vocab.meaning %><% } %></textarea
        >
      </div>
      <div class="form-control">
        <label for="example">Example</label>
        <textarea name="example" id="example" rows="5">
<% if (editing) { %><%= vocab.example %><% } %></textarea
        >
      </div>
      <% if (editing) { %>
      <input type="hidden" value="<%= vocab.id %>" name="vocabId" />
      <% } %>

      <button class="btn" type="submit">
        <% if (editing) { %>Update Vocab<% } else { %>Add Vocab<% } %>
      </button>
    </form>
  </main>
</body>
